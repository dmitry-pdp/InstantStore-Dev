@using InstantStore.WebUI.Resources;
@using InstantStore.WebUI.ViewModels;
@model UserViewModel
@{
    ViewBag.Title = StringResource.User_ChangePassword;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid col-md-8 col-md-offset-2">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            @Html.Partial("UserInfoPassword", this.Model);
        </fieldset>
        <input type="submit" value="@StringResource.UserProfile_BtnUpdate" class="btn btn-primary btn-lg col-sm-offset-4" />
    }
</div>
