@using InstantStore.WebUI.ViewModels;
@using InstantStore.WebUI.Resources;

@model TextViewModel

<h2>@this.Model.Title</h2>

@using (Html.BeginForm())
{ 
    <input type="hidden" name="t" value="TextView" />
    if (this.Model.HasSubject)
    {
        <div class="form-group form-horizontal">
            <label>@this.Model.SubjectLabel</label>
            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
        </div>
    }
    <div class="form-group">
        <label>@this.Model.ContentLabel</label>
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", style = "height:300px" })
    </div>
    <div class="form-group">
        <input type="submit" value="@StringResource.Settings_SubmitButtonText" class="btn btn-primary btn-lg" />
    </div>
}

@if (this.Model.HasRichText)
{
    <script>
        $(function () {
            tinymce.remove();
            tinymce.init(
            {
                selector: 'textarea',
                plugins: [
                    "advlist autolink lists link image charmap print preview hr anchor pagebreak",
                    "searchreplace wordcount visualblocks visualchars",
                    "insertdatetime nonbreaking save table contextmenu directionality",
                    "emoticons paste textcolor colorpicker textpattern"
                ],
                toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | forecolor backcolor emoticons",
            });
        });
    </script>
}