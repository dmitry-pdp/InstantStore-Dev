@using InstantStore.WebUI.ViewModels;
@using InstantStore.WebUI.Resources;
@model UserProfileViewModel
@{
    ViewBag.Title = StringResource.admin_editUser;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var userLists = ViewBag.UsersListViewModel as UsersListViewModel;
}

<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>
tinymce.init(
    {
        selector: 'textarea',
        plugins: [
            "advlist autolink lists link image charmap print preview hr anchor pagebreak",
            "searchreplace wordcount visualblocks visualchars",
            "insertdatetime nonbreaking save table contextmenu directionality",
            "emoticons paste textcolor colorpicker textpattern"
        ],
        toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | forecolor backcolor emoticons",
    });
</script>

<div class="border col-sm-3">
    <div class="row" style="vertical-align:bottom">
        <div class="col-sm-offset-1 col-sm-5">
            <h4>@StringResource.admin_Users</h4>
        </div>
        <div class="col-sm-6">
            @Html.ActionLink(StringResource.admin_Back, "Users", null, new { @class = "btn btn-primary pull-right" })
        </div>
    </div>
    
    <ul class="nav nav-pills nav-stacked">
        @foreach (var userInfo in userLists.AllUsers)
        {
            <li role="presentation" class="@(userInfo.Id == userLists.Current.Id ? "active" : "")" style="@(!userInfo.IsActivated ? "background-color:#efe" : "") @(userInfo.IsBlocked ? "background-color:#ddd" : "")">
                <a href="/admin/user?id=@userInfo.Id"><span>@userInfo.Name</span></a>
            </li>
        }
    </ul>
</div>
<div class="border col-sm-8 container-fluid">
    <h3>@ViewBag.Title</h3>
    @using (Html.BeginForm("User", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <div class="pull-right" style="margin-right:15px">
                <a href="/admin/orders?userid=@userLists.Current.Id" class="btn btn-default">@StringResource.admin_UsersOrdersAction</a>
                @if (!userLists.Current.IsActivated)
                {
                    <a href="/admin/user?id=@userLists.Current.Id&activate=true" class="btn btn-default">@StringResource.admin_UserActivateAction</a>
                }
                else if (!userLists.Current.IsBlocked)
                {
                    <a href="/admin/user?id=@userLists.Current.Id&block=true" class="btn btn-default">@StringResource.user_ActionsBlock</a>
                }
                else 
                {
                    <a href="/admin/user?id=@userLists.Current.Id&unblock=true" class="btn btn-default">@StringResource.admin_UserUnblockAction</a>
                }
                <a href="#" class="btn btn-default">@StringResource.admin_UserResetPassword</a>
            </div>
        </div>
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Company, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Company, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.Company)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Phonenumber, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Phonenumber, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.Phonenumber)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.City, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.City)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PaymentType, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.PaymentType, this.Model.PaymentTypes, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.PaymentType)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Currency, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.Currency, this.Model.Currencies, new { @class = "form-control" })
                </div>
                <div class="col-sm-8 col-sm-offset-4 error-label">
                    @Html.ValidationMessageFor(model => model.Currency)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Comments, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(model => model.Comments, new { @class = "form-control" })
                </div>
            </div>
        </fieldset>
        @Html.HiddenFor(model => model.Id);
        <div class="form-group" style="margin-right:0px">
            <input type="submit" value="@StringResource.Settings_SubmitButtonText" class="btn btn-primary btn-lg col-sm-offset-4" style="float:right" />
        </div>
    }
</div>
