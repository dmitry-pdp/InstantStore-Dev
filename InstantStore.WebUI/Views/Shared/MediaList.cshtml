@using InstantStore.WebUI.ViewModels;
@model MediaListViewModel

<h3>@this.Model.Title</h3>
@foreach (var item in this.Model.Items)
{ 
    <div class="media">
        <a href="@item.Link.GetUrl(this.Url)">
            <div class="media-left">
                <img class="media-object" src="@Url.Action("Thumbnail", "Main", new { Id = item.ImageThumbnailId, size = "s" })" alt="@item.Name" height="64" width="64">
            </div>
            <div class="media-body">
                <h4 class="media-heading">@item.Name</h4>
            </div>
        </a>
    </div>
}
