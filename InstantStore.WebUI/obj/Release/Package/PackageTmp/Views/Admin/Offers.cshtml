@using InstantStore.WebUI.ViewModels;
@using InstantStore.WebUI.Resources;
@{
    ViewBag.Title = StringResource.admin_Offers;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var offersHeaderViewModel = this.ViewBag.OffersHeaderViewModel as TabControlViewModel;
    var offersTableViewModel = this.ViewBag.OffersTableViewModel as TableViewModel;
}

<div class="col-sm-offset-1 col-sm-10">
    <h2>@ViewBag.Title</h2>
    @if (offersHeaderViewModel != null && offersHeaderViewModel.Tabs.Any())
    {
        @Html.Partial("TabControlView", offersHeaderViewModel)
    }
    @if (offersTableViewModel == null || !offersTableViewModel.Rows.Any())
    {
        <h4>@StringResource.admin_OffersListEmpty</h4>
    }
    else
    {
        @Html.Partial("TableView", offersTableViewModel)
    }

    @Html.ActionLink(StringResource.admin_OffersAddNew, "Offer", null, new { @class="btn btn-default" })
</div>


