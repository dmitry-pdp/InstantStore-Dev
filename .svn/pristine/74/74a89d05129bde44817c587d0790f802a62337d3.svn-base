<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="Stylesheet" type="text/css" href="~/Styles/main.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
        <div id="top_bar">
            <div class="logo">
                <a href="Default.aspx">Instant</a>
            </div>
            <div class="status">
                <asp:LoginView ID="LoginView1" runat="server">
                    <loggedintemplate>
                        <asp:LoginName ID="LoginName1" runat="server" />

                        <% if (Context.User.IsInRole("admin"))
                        { %>
                        &nbsp;&nbsp;<a href="admin/Default.aspx"><asp:Literal runat="server" ID="litSettings" Text="<%$ Resources:StringResource, admin_Settings %>" /></a>
                        <%} %>
                        &nbsp;&nbsp;<asp:LoginStatus ID="LoginStatus1" runat="server" LogoutText="<%$ Resources:StringResource, Logout%>" />
                    </loggedintemplate>
                </asp:LoginView>
            </div>
        </div>
        <div id="container">
            <div id="rightCol">
                <asp:LoginView ID="LoginView" runat="server">
                    <anonymoustemplate>
                        <uc:Login runat="server" ID="ucLogin" />
                    </anonymoustemplate>
                </asp:LoginView>
            </div>
            <div id="leftCol">
                @RenderBody()
            </div>
        </div>
        <header></header>
        <nav>

        </nav>

    <div>
        
    </div>
</body>
</html>
